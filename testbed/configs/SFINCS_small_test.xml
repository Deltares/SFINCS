<SFINCS_testbed>
    <config>
        <serverUrl>{PLACEHOLDER}</serverUrl>
        <localPaths>
            <casesDir>./data/cases</casesDir>
            <referenceDir>./data/references</referenceDir>
            <enginesDir>./data/engines</enginesDir>
        </localPaths>
    </config>

    <programs>
        <program name="SFINCS">
            <path>sfincs/SFINCS.exe</path>
        </program>
    </programs>

    <testCases>
        <testCase name="01_implementation_Drainage_culvert" ref="SFINCS">
            <path>01_implementation/Drainage_culvert/input</path>
            <checks>
 				<file name="sfincs_his.nc" type="NETCDF">
                    <parameters>
                        <parameter name="drainage_discharge" location="[1,2]" toleranceAbsolute="0.0001"/>						
                    </parameters>
                </file>
			</checks>
            <maxRunTime>120.0</maxRunTime>
        </testCase>
        <testCase name="01_implementation_Drainage_pump" ref="SFINCS">
            <path>01_implementation/Drainage_pump/input</path>
            <checks>
 				<file name="sfincs_his.nc" type="NETCDF">
                    <parameters>
                        <parameter name="drainage_discharge" location="[1,2]" toleranceAbsolute="0.0001"/>						
                    </parameters>
                </file>
			</checks>
            <maxRunTime>120.0</maxRunTime>
        </testCase>
    </testCases>
</SFINCS_testbed>