<SFINCS_testbed>
    <config>
        <serverUrl>{PLACEHOLDER}</serverUrl>
        <localPaths>
            <casesDir>./data/cases</casesDir>
            <referenceDir>./data/references</referenceDir>
            <enginesDir>./data/engines</enginesDir>
            <resultsDir>./data/results</resultsDir>
        </localPaths>
    </config>

    <programs>
        <program name="SFINCS">
            <path>sfincs/SFINCS.exe</path>
        </program>
    </programs>

    <testCases>
        <testCase name="Carriergreenspan advection" ref="SFINCS">
            <path>02_Verification/Carriergreenspan_advection</path>
            <checks>
                <file name="sfincs_map.nc" type="NETCDF">
                </file>
			</checks>
            <maxRunTime>120.0</maxRunTime>
        </testCase>
        <testCase name="DamBreakWet1D paper" ref="SFINCS">
            <path>02_Verification/DamBreakWet1D_paper</path>
            <checks>
                <file name="sfincs_map.nc" type="NETCDF">
                </file>
			</checks>
            <maxRunTime>120.0</maxRunTime>
        </testCase>
    </testCases>

    <plotSettings>
        <plotSetting ref="Carriergreenspan advection">
            <map mapType="1D" variable="zsmax" yloc="0" time="[1]" />
            <axes xlimit="[50,150]" ylimit="[4.75, 5.25]" xlabel="x [km]" ylabel="Water level [m]" />
        </plotSetting>
        <plotSetting observations="true" ref="DamBreakWet1D paper">
            <map mapType="1D" variable="zs" yloc="0" time="[1,2,5,10]" />
            <axes xlimit="[0,100]" ylimit="[-0.05,1.05]" xlabel="Distance [m]" ylabel="Water level [m]" />
        </plotSetting>
    </plotSettings>
</SFINCS_testbed>