<SFINCS_testbed>
    <config>
        <serverUrl>{PLACEHOLDER}</serverUrl>
        <localPaths>
            <casesDir>./data/cases</casesDir>
            <referenceDir>./data/references</referenceDir>
            <enginesDir>./data/engines</enginesDir>
            <resultsDir>./data/results</resultsDir>
        </localPaths>
    </config>

    <programs>
        <program name="SFINCS">
            <path>sfincs/SFINCS.exe</path>
        </program>
    </programs>

    <testCases>
        <testCase name="Drainage culvert" ref="SFINCS">
            <path>01_implementation/Drainage_culvert</path>
            <checks>
 				<file name="sfincs_his.nc" type="NETCDF">
                    <parameters>
                        <parameter name="drainage_discharge" location="[1,2]" toleranceAbsolute="0.0001"/>						
                    </parameters>
                </file>
                <file name="sfincs_map.nc" type="NETCDF">
                </file>
			</checks>
            <maxRunTime>120.0</maxRunTime>
        </testCase>
        <testCase name="Drainage pump" ref="SFINCS">
            <path>01_implementation/Drainage_pump</path>
            <checks>
 				<file name="sfincs_his.nc" type="NETCDF">
                    <parameters>
                        <parameter name="drainage_discharge" location="[1,2]" toleranceAbsolute="0.0001"/>						
                    </parameters>
                </file>
                <file name="sfincs_map.nc" type="NETCDF">
                </file>
			</checks>
            <maxRunTime>120.0</maxRunTime>
        </testCase>
    </testCases>

    <plotSettings>
        <plotSetting ref="Drainage pump">
            <his location="[1,2]" variable="drainage_discharge" />
            <axes xlimit="[0,2]" ylimit="[-0.4,0]" xlabel="Time [hr]" ylabel="Discharge [m^3/s]" />
        </plotSetting>
    </plotSettings>
</SFINCS_testbed>